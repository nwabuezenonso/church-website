<div class="blog-home2 py-5">
  <div class="container">
    <!-- Row  -->
    <div class="row justify-content-center">
      <!-- Column -->
      <div class="col-md-8 text-center">
        <h3 class="my-3">Special Events</h3>
        <h6 class="subtitle font-weight-normal">Join us for this Solemn event </h6>
      </div>
      <!-- Column -->
      <!-- Column -->
    </div>
    <div class="row mt-4">
      <!-- Column -->
      <% if(item.length > 0) { %>
        <% item.forEach (function(item) { %>
          <div class="col-md-4 on-hover wow fadeIn"  data-wow-delay="0.1s">
            <div class="card border-0 mb-4">
              <a href="<%= item.img %>" target="_blank"><img class="card_img card-img-top"  alt="<%= item.eventname %>" src="<%= item.img %>" width="100%" height="70%"></a>
              <h5 class="font-weight-medium mt-3"><%= item.eventname %></h5>
              <p class="mt-3"><%= item.eventdescription %></p>
              <p class="font-weight-medium mt-3"><%= item.eventdate %></p>
              <a href="https://en.wikipedia.org/wiki/<%= item.eventname %>" target="_blank" class="text-decoration-none linking text-themecolor mt-2">Learn More</a>
            </div>
          </div>
        <% }) %> 
      <%  }  else{ %>
        <p style="font-size: 30px; text-align: center; margin: 0 30% 0 30%;">There are no event to display</p>
        <% } %>
    </div>

  </div>
</div>



  <!-- End-->
