<%- include('./partials/header.ejs') %>
    <link rel="stylesheet" href="./css/form.css">
    <link rel="stylesheet" href="./css/footer.css">
    <title><%= title %></title>
  </head>
<body>
  <section id="banner">
      <div class="banner">
        <%- include('./partials/nav.ejs') %>
          <div class="content">
              <h1>APPLICATION FOR HOLY BAPTISM</h1>
          </div>
      </div>
  </section>

  <section>
      <div class="container">
        <div class="row">
            <div class="col">
                <h1>THE ANGLICAN CHURCH OF THE MESSIAH</h1>
                <h5>BAPTISM FORM</h5>
            </div>
        </div>
      </div>
  </section>
   

  <section>
      <div class="container">
        <form id="form" action="/baptismData" method="POST">
         
            <div class="form-group">
              <label for="Name">Child Name</label>
              <input type="text" name="name"  class="form-control" required id="inputAddress" >
            </div>

            <div class="form-group">
                <label for="Name">Child date of birth</label>
                <input type="date" name="dob" class="form-control" required id="inputAddress" >
            </div>
           
            <div class="form-group">
                <label for="Name">Place of birth</label>
                <input type="text" name="pob" class="form-control" required id="inputAddress" >
            </div>

            <div class="form-group">
                <label for="Name">Father's Full Name</label>
                <input type="text" name="fathername" class="form-control" required id="inputAddress" >
            </div>

            <div class="form-group">
                <label for="Name">Mother's Full Name</label>
                <input type="text" name="mothername" class="form-control" required id="inputAddress" >
            </div>

            <div class="form-group">
                <label for="Name">Address</label>
                <input type="text" name="address" class="form-control" required id="inputAddress" >
            </div>

            <div class="form-group">
                <label for="Name">Telephone</label>
                <input type="number" name="telephone" class="form-control" required id="inputAddress" >
            </div>

            <div class="form-group">
                <label for="Name">Father's Occupation</label>
                <input type="text" name="father_occupation" class="form-control" required id="inputAddress" >
            </div>

            <button class="button">SUBMIT</button>
          </form>
      </div>
  </section>
   
<%- include('./partials/footer.ejs') %>